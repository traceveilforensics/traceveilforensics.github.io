# Environment Variables for Netlify
# Copy this to .env and add your actual values

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_key_here

# Email Configuration (for sending invoices, notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@traceveilforensics.com

# Admin Credentials (will be hashed in database)
ADMIN_EMAIL=admin@traceveilforensics.com
ADMIN_PASSWORD=your_secure_password_here

# Site Configuration
SITE_URL=https://traceveilforensics.netlify.app
