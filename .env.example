# Environment Variables for Netlify/Local Development
# Copy this to .env and add your actual values

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWT Configuration (IMPORTANT: Change these in production!)
JWT_SECRET=your_jwt_secret_key_min_32_chars_long
JWT_REFRESH_SECRET=your_refresh_secret_key_min_32_chars_long

# Email Configuration (for sending invoices, notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@traceveilforensics.com

# Admin Credentials (will be hashed in database)
ADMIN_EMAIL=admin@traceveilforensics.com
ADMIN_PASSWORD=your_secure_password_here

# Site Configuration
SITE_URL=https://traceveilforensics.netlify.app

# Google OAuth Configuration
# Get these from: https://console.cloud.google.com/
# Add "http://localhost:8888" and "http://localhost:3000" to Authorized JavaScript origins
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
